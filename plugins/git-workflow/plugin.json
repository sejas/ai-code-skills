{
  "name": "git-workflow",
  "version": "0.1.0",
  "description": "Git commit automation and validation with conventional commits support",
  "author": {
    "name": "Antonio Sejas",
    "email": "antonio@sejas.es"
  },
  "homepage": "https://github.com/sejas/ai-code-skills",
  "repository": "https://github.com/sejas/ai-code-skills",
  "license": "MIT",
  "keywords": ["git", "commits", "conventional-commits", "automation"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/commit-validator.sh"
          }
        ]
      }
    ]
  }
}
